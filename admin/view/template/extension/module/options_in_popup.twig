                    <div class="col-sm-4">
                      <label for="product_thumb_height">{{ text_height }}</label>
                      <input type="number" id="product_thumb_height" name="config[product_thumb_height]" class="form-control" max="1000" min="0" value="{{ product_thumb_height }}">
                    </div>
                  </div>
