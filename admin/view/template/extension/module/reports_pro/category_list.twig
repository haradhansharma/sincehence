                <thead>
                  <tr>
                    <input type="hidden" name="action" >

                    <td style="width: 1px;" class="text-center"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);" /></td>

                    <td class="text-center" id="th-image">{{ column_image }}</td>

                    <td class="text-left" id="th-name" >{% if sort == 'cd.name'%}
                      <a href="{{ sort_name }}" class="{{ order|lower }}">{{ column_name }}</a>
                      {% else %}
                      <a href="{{ sort_name }}">{{ column_name }}</a>
                      {% endif %}</td>

                    <td class="text-left" id="th-meta-title" >{% if sort == 'cd.meta_title'%}
                      <a href="{{ sort_meta_title }}" class="{{ order|lower }}">{{ column_meta_title }}</a>
                      {% else %}
                      <a href="{{ sort_meta_title }}">{{ column_meta_title }}</a>
                      {% endif %}</td>

                    <td class="text-left" id="th-meta-keyword" style="display:none"  >{% if sort == 'cd.meta_description' %}
                      <a href="{{ sort_meta_keyword }}" class="{{ order|lower }}">{{ column_meta_keyword }}</a>
                      {% else %}
                      <a href="{{ sort_meta_keyword }}">{{ column_meta_keyword }}</a>
                      {% endif %}</td>

                    <td class="text-center" id="th-tags" style="display:none">{{ column_tags }}</td>

                    <td class="text-left" id="th-image-custom-title" style="display:none">{% if sort == 'c.image_custom_title' %} <a href="{{ sort_image_custom_title }}" class="{{ order|lower }}">{{ column_image_custom_title }}</a> {% else %} <a href="{{ sort_image_custom_title }}">{{ column_image_custom_title }}</a> {% endif %}</td>

                    <td class="text-left" id="th-image-custom-alt" style="display:none">{% if sort == 'c.image_custom_alt' %} <a href="{{ sort_image_custom_alt }}" class="{{ order|lower }}">{{ column_image_custom_alt }}</a> {% else %} <a href="{{ sort_image_custom_alt }}">{{ column_image_custom_alt }}</a> {% endif %}</td>

                    <td class="text-left" id="th-status" >{% if sort == 'c.status'%}
                      <a href="{{ sort_status }}" class="{{ order|lower }}">{{ column_status }}</a>
                      {% else %}
                      <a href="{{ sort_status }}">{{ column_status }}</a>
                      {% endif %}</td>

                    <td class="text-center" id="th-seo-score">{{ column_seo_score }}</td>
                    <td class="text-center" id="th-readability-score">{{ column_readability_score }}</td>

                    <td class="text-right" style="width:10%">{{ column_action }}</td>
                  </tr>
                </thead>
                <tbody>
                  {% if categories %}
                  {% for category in categories %}
                  <tr>
                    <td class="text-center">{% if category.category_id in selected %}
                    <input type="checkbox" name="selected[]" value="{{ category.category_id }}" checked="checked" />
                    {% else %}
                    <input type="checkbox" name="selected[]" value="{{ category.category_id }}" />
                    {% endif %}</td>

                    <td class="text-center" id="td-image">{% if category.image %} <img src="{{ category.image }}" alt="{{ category.name }}" class="img-thumbnail" /> {% else %} <span class="img-thumbnail list"><i class="fa fa-camera fa-2x"></i></span> {% endif %}</td>

                    <td class="text-left" id="td-name">{{ category.name }}</td>
                    <td class="text-left" id="td-meta-title" >{{ category.meta_title }}</td>
                    <td class="text-left" id="td-meta-keyword" style="display:none">{{ category.meta_keyword }}</td>
                    <td class="text-left" id="td-tags" style="display:none">{{ category.tag }}</td>
                    <td class="text-left" id="td-image-custom-title" style="display:none">{{ category.image_custom_title }}</td>
                    <td class="text-left" id="td-image-custom-alt" style="display:none">{{ category.image_custom_alt }}</td>
                    <td class="text-left" id="td-status">{% if category.status == '1' %}{{ text_enabled }}{% else %}{{ text_disabled }}{% endif %}</td>
                   
                    <td class="text-center" id="td-seo-score">

                      {% if category.seo_score >= 70 %}
                        <i class="fa fa-circle fa-lg text-success" title="{{ text_good }}"></i>
                      {% endif %}

                      {% if category.seo_score >= 50 and category.seo_score < 70 %}
                        <i class="fa fa-circle fa-lg text-warning" title="{{ text_acceptable }}"></i>
                      {% endif %}

                      {% if category.seo_score > 0 and category.seo_score < 50 %}
                         <i class="fa fa-circle fa-lg text-danger" title="{{ text_need_improvements }}" ></i>
                      {% endif %}

                      {% if category.seo_score <= 0 %}
                        <i class="fa fa-circle fa-lg text-default" title="{{ text_not_started }}"></i>
                      {% endif %}


                    </td>

                    <td class="text-center" id="td-readability-score">

                      {% if category.readability_score >= 60 %}
                        <i class="fa fa-circle fa-lg text-success" title="{{ text_good }}"></i>
                      {% endif %}

                      {% if category.readability_score >= 50 and category.readability_score < 60 %}
                        <i class="fa fa-circle fa-lg text-warning" title="{{ text_acceptable }}"></i>
                      {% endif %}

                      {% if category.readability_score > 0 and category.readability_score < 50 %}
                        <i class="fa fa-circle fa-lg text-danger" title="{{ text_need_improvements }}" ></i>
                      {% endif %}

                      {% if category.readability_score <= 0 %}
                        <i class="fa fa-circle fa-lg text-default" title="{{ text_not_started }}"></i>
                      {% endif %}


                    </td>
                    <td class="text-right"><a href="{{ category.edit }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a></td>
                  </tr>
                  {% endfor %}
                  {% else %}
                  <tr>
                    <td class="text-center" colspan="8">{{ text_no_results }}</td>
                  </tr>
                  {% endif %}
                </tbody>
              </table>
            </div>
          </form>
          <div class="row">
            <div class="col-sm-6 text-left">{{ pagination }}</div>
            <div class="col-sm-6 text-right">{{ results }}</div>
          </div>
        </div>
      </div>
    </div>

