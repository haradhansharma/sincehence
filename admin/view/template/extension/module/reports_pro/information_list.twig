{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
         <button type="button" data-toggle="tooltip" title="{{ button_filter }}" onclick="$('#filter-information').toggleClass('hidden-sm hidden-xs');" class="btn btn-default hidden-md hidden-lg"><i class="fa fa-filter"></i></button>

        <div class="form-inline">
          <select class="form-control" id="action" name="action">
            <option value="seo_url">{{ text_generate_seo_url }}</option>
            <option value="meta_title">{{ text_generate_meta_title }}</option>
            <option value="meta_description">{{ text_generate_meta_description }}</option>
            <option value="meta_keywords">{{ text_generate_meta_keywords }}</option>
          </select>
          <button type="button" data-toggle="tooltip" id="seo-url" class="btn btn-primary" onclick="$('input[name*=\'action\']').val($('select[name*=\'action\']').val());$('#form-information').submit();">{{ button_generate }}</button>
        </div>

      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if warning %}
    <div class="alert alert-info alert-dismissible"><i class="fa fa-exclamation-circle"></i> 
        {{ text_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}


<div class="row">
    <div class="col-md-12 hidden-sm hidden-xs">
    <div class="panel panel-default">
      <div class="panel-heading">
          <h3 class="panel-title">{{ text_screen_options }}</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-2 col-md-3">
            <input type="checkbox" data-id="title" name="screen-option" checked=""> {{ column_title }}
          </div>
          
          <div class="col-lg-2 col-md-3">
            <input type="checkbox" data-id="meta-title" name="screen-option" checked=""> {{ column_meta_title }}
          </div>

          <div class="col-lg-2 col-md-3">
            <input type="checkbox" data-id="status" name="screen-option" checked=""> {{ column_status }}
          </div>
         
          <div class="col-lg-2 col-md-3">
            <input type="checkbox" data-id="meta-keyword" name="screen-option"> {{ column_meta_keyword }}
          </div>
          
          <div class="col-lg-2 col-md-3">
            <input type="checkbox" data-id="seo-score" name="screen-option" checked=""> {{ column_seo_score }}
          </div>

           <div class="col-lg-2 col-md-3">
            <input type="checkbox" data-id="readability-score" name="screen-option" checked=""> {{ column_readability_score }}
          </div>
          
        </div>
      </div>
    </div>
    </div>
  </div>

    <div class="row">
      <div id="filter-information" class="col-md-3 col-md-push-9 col-sm-12 hidden-sm hidden-xs">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-filter"></i> {{ text_filter }}</h3>
          </div>
          <div class="panel-body">
            <div class="form-group">
              <label class="control-label" for="input-name">{{ entry_title }}</label>
              <input type="text" name="filter_title" value="{{ filter_title }}" placeholder="{{ entry_title }}" id="input-name" class="form-control" />
            </div>

            <div class="form-group">
              <label class="control-label" for="input-meta-title">{{ entry_meta_title }}</label>
              <select name="filter_meta_title_status" id="input-meta-title" class="form-control">
                <option value=""></option>
                {% if filter_meta_title_status == '1' %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                {% else %}
                  <option value="1">{{ text_enabled }}</option>
                {% endif %}
                {% if filter_meta_title_status == '0' %}
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                {% else %}
                  <option value="0">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>

            <div class="form-group">
              <label class="control-label" for="input-meta-description">{{ entry_meta_description }}</label>
              <select name="filter_meta_description_status" id="input-meta-description" class="form-control">
                <option value=""></option>
                {% if filter_meta_description_status == '1' %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                {% else %}
                  <option value="1">{{ text_enabled }}</option>
                {% endif %}
                {% if filter_meta_description_status == '0' %}
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                {% else %}
                  <option value="0">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>



            <div class="form-group">
              <label class="control-label" for="input-meta-keywords">{{ entry_meta_keyword }}</label>
              <select name="filter_meta_keywords_status" id="input-meta-keywords" class="form-control">
                <option value=""></option>
                {% if filter_meta_keywords_status == '1' %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                {% else %}
                  <option value="1">{{ text_enabled }}</option>
                {% endif %}
                {% if filter_meta_keywords_status == '0' %}
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                {% else %}
                  <option value="0">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>


            <div class="form-group">
              <label class="control-label" for="input-custom-h1-tag">{{ entry_custom_h1_tag }}</label>
              <select name="filter_custom_h1_tag_status" id="input-custom-h1-tag" class="form-control">
                <option value=""></option>
                {% if filter_custom_h1_tag_status == '1' %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                {% else %}
                  <option value="1">{{ text_enabled }}</option>
                {% endif %}
                {% if filter_custom_h1_tag_status == '0' %}
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                {% else %}
                  <option value="0">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>

            <div class="form-group">
              <label class="control-label" for="input-seo">{{ entry_seo }}</label>
              <select name="filter_seo_status" id="input-seo" class="form-control">
                <option value=""></option>
                {% if filter_seo_status == '1' %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                {% else %}
                  <option value="1">{{ text_enabled }}</option>
                {% endif %}
                {% if filter_seo_status == '0' %}
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                {% else %}
                  <option value="0">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>

            <div class="form-group">
              <label class="control-label" for="input-status">{{ entry_status }}</label>
              <select name="filter_status" id="input-status" class="form-control">
                <option value=""></option>
                {% if filter_status == '1' %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                {% else %}
                  <option value="1">{{ text_enabled }}</option>
                {% endif %}
                {% if filter_status == '0' %}
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                {% else %}
                  <option value="0">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
            <div class="form-group text-right">
              <button type="button" id="button-filter" class="btn btn-default"><i class="fa fa-filter"></i> {{ button_filter }}</button>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-9 col-md-pull-3 col-sm-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>
          </div>
          <div class="panel-body">
            <form action="{{ delete }}" method="post" enctype="multipart/form-data" id="form-information">
              <div class="table-responsive">
                <table class="table table-bordered table-hover" id="information-table">
                  <thead>
                    <tr>
                      <td style="width: 1px;" class="text-center"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);" /></td>
                      <td class="text-left" id="th-title">{% if sort == 'id.title' %}
                        <a href="{{ sort_title }}" class="{{ order|lower }}">{{ column_title }}</a>
                        {% else %}
                        <a href="{{ sort_title }}">{{ column_title }}</a>
                        {% endif %}</td>
                      <td class="text-left" id="th-meta-title">{% if sort == 'id.meta_title' %}
                        <a href="{{ sort_meta_title }}" class="{{ order|lower }}">{{ column_meta_title }}</a>
                        {% else %}
                        <a href="{{ sort_meta_title }}">{{ column_meta_title }}</a>
                        {% endif %}</td>
                      <td class="text-left" id="th-meta-keyword" style="display:none">{% if sort == 'id.meta_keyword' %}
                        <a href="{{ sort_meta_keyword }}" class="{{ order|lower }}">{{ column_meta_keyword }}</a>
                        {% else %}
                        <a href="{{ sort_meta_keyword }}">{{ column_meta_keyword }}</a>
                        {% endif %}</td>
                      <td class="text-left" id="th-status" >{% if sort == 'i.status'%}
                      <a href="{{ sort_status }}" class="{{ order|lower }}">{{ column_status }}</a>
                      {% else %}
                      <a href="{{ sort_status }}">{{ column_status }}</a>
                      {% endif %}</td>

                      <td class="text-center" id="th-seo-score">{{ column_seo_score }}</td>
                      <td class="text-center" id="th-readability-score">{{ column_readability_score }}</td>

                      <td class="text-right" style="width:15%">{{ column_action }}</td>
                    </tr>
                  </thead>
                  <tbody>
                    {% if informations %}
                    {% for information in informations %}
                    <tr>
                       <input type="hidden" name="action" >
                      <td class="text-center">{% if information.information_id in selected %}
                        <input type="checkbox" name="selected[]" value="{{ information.information_id }}" checked="checked" />
                        {% else %}
                        <input type="checkbox" name="selected[]" value="{{ information.information_id }}" />
                        {% endif %}</td>
                      <td class="text-left" id="td-title">{{ information.title }}</td>
                      <td class="text-left" id="td-meta-title">{{ information.meta_title }}</td>
                      <td class="text-left" id="td-meta-keyword" style="display:none">{{ information.meta_keyword }}</td>
                      <td class="text-left" id="td-status">{% if information.status == '1' %}{{ text_enabled }}{% else %}{{ text_disabled }}{% endif %}</td>
                      
                      <td class="text-center" id="td-seo-score">

                        {% if information.seo_score >= 70 %}
                            <i class="fa fa-circle fa-lg text-success" title="{{ text_good }}"></i>
                        {% endif %}

                        {% if information.seo_score >= 50 and information.seo_score < 70 %}
                          <i class="fa fa-circle fa-lg text-warning" title="{{ text_acceptable }}"></i>
                        {% endif %}

                        {% if information.seo_score > 0 and information.seo_score < 50 %}
                           <i class="fa fa-circle fa-lg text-danger" title="{{ text_need_improvements }}" ></i>
                        {% endif %}

                        {% if information.seo_score <= 0 %}
                          <i class="fa fa-circle fa-lg text-default" title="{{ text_not_started }}"></i>
                        {% endif %}

                      </td>

                      <td class="text-center" id="td-readability-score">

                        {% if information.readability_score >= 60 %}
                          <i class="fa fa-circle fa-lg text-success" title="{{ text_good }}"></i>
                        {% endif %}

                        {% if information.readability_score >= 50 and information.readability_score < 60 %}
                          <i class="fa fa-circle fa-lg text-warning" title="{{ text_acceptable }}"></i>
                        {% endif %}

                        {% if information.readability_score > 0 and information.readability_score < 50 %}
                          <i class="fa fa-circle fa-lg text-danger" title="{{ text_need_improvements }}" ></i>
                        {% endif %}

                        {% if information.readability_score <= 0 %}
                          <i class="fa fa-circle fa-lg text-default" title="{{ text_not_started }}"></i>
                        {% endif %}

                      </td>
                      
                      <td class="text-right"><a href="{{ information.edit }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a></td>
                    </tr>
                    {% endfor %}
                    {% else %}
                    <tr>
                      <td class="text-center" colspan="7">{{ text_no_results }}</td>
                    </tr>
                    {% endif %}
                  </tbody>
                </table>
              </div>
            </form>
            <div class="row">
              <div class="col-sm-6 text-left">{{ pagination }}</div>
              <div class="col-sm-6 text-right">{{ results }}</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<script type="text/javascript">
  $(document).ready(function(){
   $('input[name=\'screen-option\']').change(function(){

      $id = $(this).attr('data-id');
      
       if(this.checked)
       {
        $('#information-table').find('#th-'+$id).show();
        $('#information-table').find('td#td-'+$id).show();
       } else {
          $('#information-table').find('#th-'+$id).hide();
          $('#information-table').find('td#td-'+$id).hide();
       }
   });

});
</script>
  
<script type="text/javascript"><!--
$('#button-filter').on('click', function() {
  var url = '';
  var filter_title = $('input[name=\'filter_title\']').val();
  if (filter_title) {
    url += '&filter_title=' + encodeURIComponent(filter_title);
  }

   var filter_meta_title_status = $('select[name=\'filter_meta_title_status\']').val();
  if (filter_meta_title_status !== '') {
    url += '&filter_meta_title_status=' + encodeURIComponent(filter_meta_title_status);
  }

   var filter_meta_description_status = $('select[name=\'filter_meta_description_status\']').val();
  if (filter_meta_description_status !== '') {
    url += '&filter_meta_description_status=' + encodeURIComponent(filter_meta_description_status);
  }

   var filter_meta_keywords_status = $('select[name=\'filter_meta_keywords_status\']').val();
  if (filter_meta_keywords_status !== '') {
    url += '&filter_meta_keywords_status=' + encodeURIComponent(filter_meta_keywords_status);
  }

  var filter_seo_status = $('select[name=\'filter_seo_status\']').val();
  if (filter_seo_status !== '') {
    url += '&filter_seo_status=' + encodeURIComponent(filter_seo_status);
  }

  var filter_custom_h1_tag_status = $('select[name=\'filter_custom_h1_tag_status\']').val();
  if (filter_custom_h1_tag_status !== '') {
    url += '&filter_custom_h1_tag_status=' + encodeURIComponent(filter_custom_h1_tag_status);
  }

  var filter_status = $('select[name=\'filter_status\']').val();
  if (filter_status !== '') {
    url += '&filter_status=' + encodeURIComponent(filter_status);
  }

  location = 'index.php?route=extension/module/reports_pro/information&user_token={{ user_token }}' + url;
});
//--></script>
<script type="text/javascript"><!--
// IE and Edge fix!
$('button[form=\'form-information\']').on('click', function(e) {
  $('#form-information').attr('action', $(this).attr('formaction'));
});

$('input[name=\'filter_title\']').autocomplete({
  'source': function(request, response) {
    $.ajax({
      url: 'index.php?route=extension/module/reports_pro/information/autocomplete&user_token={{ user_token }}&filter_title=' +  encodeURIComponent(request),
      dataType: 'json',
      success: function(json) {
        response($.map(json, function(item) {
          return {
            label: item['title'],
            value: item['information_id']
          }
        }));
      }
    });
  },
  'select': function(item) {
    $('input[name=\'filter_title\']').val(item['label']);
  }
});

//--></script>
</div>
{{ footer }}