{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
      </div>
     <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
	 {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i>{{ text_form }}</h3>
      </div>
      <div class="panel-body">
     
            <div class="form-group">
      				<div class="row">
      					<div class="col-sm-8 col-sm-offset-2">
      						<div id="imaginary_container"> 
      							<div class="input-group stylish-input-group">
      								<input type="text" name="filter_search" class="form-control"  placeholder="{{ entry_search }}" ><span class="input-group-addon"><i class="fa fa-search searchproduct"></i></span>
      							</div>
      						</div>
      					</div>
      				</div>
            </div>
			 <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-barcode">
            <div class="form-group">
              <label class="control-label" for="input-package-title"></label>
              <div class="table-responsive">
                <table class="table table-bordered table-hover managedata">
                  <thead>
                    <tr>
                      <td class="text-left">{{ entry_name }}</td>
                      <td class="text-left">{{ entry_option }}</td>
                      <td class="text-left">{{ entry_qty }}</td>
                      <td class="text-left">{{ entry_action }}</td>
                    </tr>
                  </thead>
                  
                </table>
              </div>
            </div>
       
        <div class="row">
          <div class="col-sm-12 text-right">
            <button type="submit" form="form-barcode" data-toggle="tooltip" class="btn btn-primary">{{ button_update }}</i></button>
          </div>
        </div>
		</div>
      </div>
    </div>
  </div>
</div>

{{ footer }}

<script>       
  $(document).bind('keypress', function(e) {
      if(e.keyCode==13){
           $('.searchproduct').trigger('click');
       }
  });

  $(document).on('click','.searchproduct',function() {  
    var filter_search = $('input[name=\'filter_search\']').val();
	if(filter_search!==''){
    $.ajax({
      url: 'index.php?route=possetting/stockin/search&user_token={{ user_token }}&filter_search=' +filter_search,
      type:'post',
      dataType:'json',
        beforeSend: function() {
      },
      success: function(json) {
        manageappend(json);  
		$('input[name=\'filter_search\']').val('');		
		$('input[name=\'filter_search\']').focus(); 
      }
    });
    }
  });
$('input[name=\'filter_search\']').focus(); 

</script> 


<script>
  function manageappend(json){  
      html='';
  if (json['products']) {
    for (i = 0; i < json['products'].length; i++) {
		if(json['products'][i]['product_option_value_id']==''){
		qty=0;
		if ($('#product' +json['products'][i]['product_id']).length)
		{
		 qty=parseInt($('.qtyp'+json['products'][i]['product_id']).val())+1;
		 $('#product' +json['products'][i]['product_id']).remove();
		}
		else{
		 qty=1;
		}
		
		html +='<tr id="product' +json['products'][i]['product_id']+ '">';

      html +='<td class="text-left"><input type="hidden" name="stockinproduct['+json['products'][i]['product_id']+ '][product_id]" value="' +json['products'][i]['product_id']+ '" />'+json['products'][i]['productname']+ '</td>';
      
      html +='<td class="text-left"> UPC:'+json['products'][i]['upc']+'</td>';
     
      html +='<td class="text-left"><div class="col-sm-4"><input type="text" name="stockinproduct['+json['products'][i]['product_id']+ '][quantity]" value="'+qty+'" class="form-control qtyp' +json['products'][i]['product_id']+ '" /></div></td>';
      
      html +='<td class="text-left"><button type="button" onclick="$(\'#product' +json['products'][i]['product_id']+ '\').remove();" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></button></a></td>';
      
      html+='</tr>';
		}
		else
		{
		qty=0;
		if ($('#product-option' +json['products'][i]['product_option_value_id']).length)
		{
		 qty=parseInt($('.qtypo'+json['products'][i]['product_option_value_id']).val())+1;
		 $('#product-option' +json['products'][i]['product_option_value_id']).remove();
		}
		else{
		 qty=1;
		}
      html +='<tr id="product-option' +json['products'][i]['product_option_value_id']+ '">';

      html +='<td class="text-left"><input type="hidden" name="stockinproduct['+json['products'][i]['product_option_value_id']+ '][product_id]" value="' +json['products'][i]['product_id']+ '" />'+json['products'][i]['productname']+ '</td>';
      
      html +='<td class="text-left"><input type="hidden" name="stockinproduct['+json['products'][i]['product_option_value_id']+ '][product_option_value_id]" value="'+json['products'][i]['product_option_value_id']+ '" /> <input type="hidden" name="stockinproduct['+json['products'][i]['product_option_value_id']+ '][option_id]" value="'+json['products'][i]['option_id']+ '" /><strong>'+json['products'][i]['option']+'</strong><br>--------</br>'+json['products'][i]['valuename']+' : '+json['products'][i]['upc']+'</td>';
     
      html +='<td class="text-left"><div class="col-sm-4"><input type="text" name="stockinproduct['+json['products'][i]['product_option_value_id']+ '][quantity]" value="'+qty+'" class="form-control qtypo'+json['products'][i]['product_option_value_id']+'" /></div></td>';
      
      html +='<td class="text-left"><button type="button" onclick="$(\'#product' +json['products'][i]['product_id']+ '\').remove();" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></button></a></td>';
      
      html+='</tr>';
	  }
    }
  } 
     
    $('.managedata').append(html);
  }
</script> 
