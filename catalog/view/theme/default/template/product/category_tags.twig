{{ header }}
<div class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  
    <div id="content" class="{{ class }}">{{ content_top }}
        <h1>{{ tag }}</h1>
        <div class="row">
          <div class="col-md-12">
            {% for category in categories %}
            <div class="col-md-3 col-sm-6 col-xs-12">
              <div class="product-thumb">
                <div class="image"><a href="{{ category.href }}"><img src="{{ category.thumb }}" alt="{{ category.image_custom_alt }}" title="{{ category.image_custom_title }}" class="img-responsive" /></a></div>
                <div>
                  <div class="caption" style="min-height:100px !important">
                    <h4><a href="{{ category.href }}">{{ category.name }}</a></h4>
                    <p>{{ category.description }}</p>
                  </div>
                </div>
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
    </div>
</div>
{{ footer }} 